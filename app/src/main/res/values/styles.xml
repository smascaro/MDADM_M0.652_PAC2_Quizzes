<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProgressHeaderStyle">
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="QuestionTitleStyle">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="QuestionImageStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="QuestionProgressBarLoadingImageStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="QuestionAnswersGroupStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingVertical" tools:targetApi="o">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="ButtonBase">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="ButtonBase.WhiteText" parent="ButtonBase">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="ButtonBase.BlackText" parent="ButtonBase">
        <item name="android:textColor">#000</item>
    </style>

    <style name="SendAnswerButtonStyle" parent="ButtonBase.WhiteText">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="ResultImageStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <style name="ButtonBase.Result">
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="ButtonBase.Result.BlackText" parent="ButtonBase.Result">
        <item name="android:textColor">#000</item>
    </style>

    <style name="ButtonBase.Result.WhiteText" parent="ButtonBase.Result">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="ResultTryAgainButtonStyle" parent="ButtonBase.Result.BlackText">
        <item name="android:backgroundTint" tools:targetApi="lollipop">#FFC75F</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="ResultNextQuestionButtonStyle" parent="ButtonBase.Result.WhiteText">
        <item name="android:backgroundTint" tools:targetApi="lollipop">#28a745</item>
    </style>

    <style name="ResultStartAgainButtonStyle" parent="ButtonBase.Result.WhiteText">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorPrimary</item>
    </style>


    <style name="AppTextAppearance" />

    <style name="AppTextAppearance.Base" parent="AppTextAppearance">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="AppTextAppearance.Base.Large" parent="AppTextAppearance.Base">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#666</item>
    </style>

    <style name="AppTextAppearance.Question" parent="AppTextAppearance.Base" />

    <style name="AppTextAppearance.Question.ProgressHeader" parent="AppTextAppearance.Base.Large" />

    <style name="AppTextAppearance.Question.Title" parent="AppTextAppearance.Question">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppTextAppearance.Question.Answer" parent="AppTextAppearance.Question">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTextAppearance.Result" parent="AppTextAppearance.Base" />

    <style name="AppTextAppearance.Result.Message" parent="AppTextAppearance.Base.Large">
        <item name="android:maxLines">2</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTextAppearance.Result.Attempts" parent="AppTextAppearance.Result">
        <item name="android:textSize">16sp</item>
    </style>
</resources>